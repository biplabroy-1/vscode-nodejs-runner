{
  "name": "vscode-nodejs-runner",
  "displayName": "Node.js Runner",
  "description": "Run Node.js scripts with just one button",
  "version": "1.0.0",
  "publisher": "IvanShcherbakov",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.runNodeScript",
        "title": "Run Node.js Script",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == javascript || resourceLangId == typescript",
          "command": "extension.runNodeScript",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "compile": "tsc",
    "postinstall": "npm run compile",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode": "^1.60.0",
    "vscode-test": "^1.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heroivaan/vscode-nodejs-runner.git"
  },
  "license": "MIT",
  "icon": "images/logo.png"
}
